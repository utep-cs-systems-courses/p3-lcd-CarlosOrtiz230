#include <msp430.h>
#include "lcdutils.h"
#include "lcddraw.h"
#include "myDraws.h"

void funnyFace()
{
  int posRow = 20;

  int posCol= 20;

  int i;

  for(i = 0; i<40; i++)

    {

      drawPixel(posCol+i,posRow,COLOR_BLACK);

      drawPixel(posCol+i+50,posRow,COLOR_BLACK);

      if(i%4==0){

	drawPixel(posCol,posRow+i,COLOR_BLACK);

	drawPixel(posCol+i,posRow+i+1,COLOR_BLACK);

	continue;

      }

      drawPixel(posCol+i,posRow+i,COLOR_BLACK);

    }

}



